{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": [
      "node_modules/**/*",
      "module/**/*",
      "coverage/**/*",
      ".storybook/**/*",
      ".idea/**/*",
      "doc/.obsidian/**/*",
      "storybook-static/**/*"
    ]
  }
}
